<main class="flex-shrink-0 mt-4">
  <div class="container">
    <div
      class="bg-light p-5 rounded text-center d-flex justify-content-center borderst"
    >
      {{#if venut}}
        <div class="alert alert-success" role="alert">
          Coche pujat a la venta! Vols veure els coches a la venta?
          <a href="/compra" class="link-success">Mercat de cotxes</a>
        </div>
      {{/if}}

      <form
        class="form-horizontal ventaform"
        action="/venta"
        method="post"
        enctype="multipart/form-data"
      >
        <h3
          style="color: #64696c; font-weight: bold;text-decoration: underline;"
        >Ven el teu cotxe: ràpid i sencill!</h3>
        <fieldset>

          <!-- Text input-->
          <div class="form-group d-flex justify-content-center mb-3 mt-3">
            <label class="col-md-4 control-label" for="cmarca">Marca</label>
            <div class="col-md-4">
              <input
                id="c_marca"
                name="cmarca"
                placeholder="MARCA"
                class="form-control input-md"
                required=""
                type="text"
              />
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group d-flex justify-content-center mb-3">
            <label class="col-md-4 control-label" for="cmodel">Model</label>
            <div class="col-md-4">
              <input
                id="c_model"
                name="cmodel"
                placeholder="MODEL"
                class="form-control input-md"
                required=""
                type="text"
              />

            </div>
          </div>

          <!-- Text input-->
          <div class="form-group d-flex justify-content-center mb-3">
            <label class="col-md-4 control-label" for="cany">Any</label>
            <div class="col-md-4">
              <input
                id="c_any"
                name="cany"
                placeholder="ANY"
                class="form-control input-md"
                required=""
                type="number"
                min="1900"
                max="2022"
              />

            </div>
          </div>

          <!-- Text input-->
          <div class="form-group d-flex justify-content-center mb-3">
            <label class="col-md-4 control-label" for="ckm">Kilometres</label>
            <div class="col-md-4">
              <input
                id="c_km"
                name="ckm"
                placeholder="KILOMETRES"
                class="form-control input-md"
                required=""
                type="number"
                min="1"
              />
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group d-flex justify-content-center mb-3">
            <label class="col-md-4 control-label" for="ccv">Cv</label>
            <div class="col-md-4">
              <input
                id="c_cv"
                name="ccv"
                placeholder="CV"
                class="form-control input-md"
                required=""
                type="number"
                min="1"
              />
            </div>
          </div>

          <!-- Select Basic -->
          <div class="form-group d-flex justify-content-center mb-3">
            <label
              class="col-md-4 control-label"
              for="ccombustible"
            >Combustible</label>
            <div class="col-md-4">
              <select
                id="c_combustible"
                name="ccombustible"
                class="form-control"
              >
                <option value="benzina">Benzina</option>
                <option value="diesel">Diesel</option>
                <option value="electric">Elèctric</option>
              </select>
            </div>
          </div>

          <!-- Textarea -->
          <div class="form-group d-flex justify-content-center mb-3">
            <label
              class="col-md-4 control-label"
              for="cdescripcio"
            >Descripció</label>
            <div class="col-md-4">
              <textarea
                class="form-control"
                id="c_descripcio"
                name="cdescripcio"
              ></textarea>
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group d-flex justify-content-center mb-3">
            <label class="col-md-4 control-label" for="cpreu">Preu</label>
            <div class="col-md-4">
              <input
                id="c_preu"
                name="cpreu"
                placeholder="Preu"
                class="form-control input-md"
                required=""
                type="number"
                min="1"
              />
            </div>
          </div>

          <!-- File Button -->
          <div class="form-group d-flex justify-content-center mt-4">
            <label class="col-md-4 control-label">Puja una foto</label>
            <div class="col-md-4">
              <input id="c_foto" name="cfoto" type="file" />
            </div>
          </div>

          <div class="form-group mt-5">
            <button type="submit" class="btn btn-outline-secondary">Ven el meu
              cotxe!</button>
          </div>

        </fieldset>
      </form>
    </div>
  </div>
</main>