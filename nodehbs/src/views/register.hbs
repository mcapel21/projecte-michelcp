<div class="signup-form mt-5">
  <form action="/register" method="post" style="text-align: center;">
    <h2>Register</h2>
    <p class="hint-text">Crea el teu compte.</p>
    {{#if error}}
    <div class="alert alert-danger" role="alert">
    Aquest usuari ja es troba registrat!
    </div>
    {{/if}}
    {{#if error2}}
    <div class="alert alert-danger" role="alert">
    No coincideixen les passwords!
    </div>
    {{/if}}
    <div class="form-group">
      <div class="row">
      </div>
    </div>
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="nomuser"
        placeholder="User"
        required="required"
      />
    </div>
    <div class="form-group">
      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="Password"
        required="required"
      />
    </div>
    <div class="form-group">
      <input
        type="password"
        class="form-control"
        name="confirm_password"
        placeholder="Confirm Password"
        required="required"
      />
    </div>
    <div class="form-group">
      <label class="form-check-label"><input
          type="checkbox"
          required="required"
        />
        Accepto els terminis d'ús i política de privacitat.
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success btn-lg btn-block">Register
        Now</button>
    </div>
  </form>
  <div class="text-center">Ja tens un compte?
    <a style="color: black;" href="/login">Sign in</a></div>
</div>