{{! <div class="row mt-5" style="justify-content: center;"> }}
<!-- List group -->
<div
  class="row mt-5 d-flex flex-column align-items-center justify-content-center"
>
  <div class="col-5">
    <div class="list-group borderst" id="list-tab" role="tablist">
      <p
        class="list-group-item mb-0 text-center"
        style="font-weight: bold; color: #8c8c8c;"
      >{{user}}
        - Historial compra/venta de SecondCars</p>
      <a
        class="list-group-item list-group-item-action"
        id="list-profile-list"
        data-toggle="list"
        href="#list-profile"
        role="tab"
        aria-controls="profile"
      >Compres</a>
      <a
        class="list-group-item list-group-item-action"
        id="list-messages-list"
        data-toggle="list"
        href="#list-messages"
        role="tab"
        aria-controls="messages"
      >Ventes</a>
    </div>
  </div>
  <div class="col-5 mt-5">
    <div class="tab-content" id="nav-tabContent" style="text-align: center;">
      <div
        class="tab-pane fade borderst2"
        id="list-profile"
        role="tabpanel"
        aria-labelledby="list-profile-list"
      >
        <h3 style="text-decoration: underline;">COMPRES</h3>
        {{#if compresUser}}
          <ul class="list-group">
            {{#each compresUser}}
              <form
                class="form-horizontal"
                action="/cancel-compraventa?key={{idcotxe}}"
                method="post"
              >
                <li class="list-group-item flexed">
                  {{marca}}
                  {{model}}
                  comprat a
                  {{vendedor}}
                  per un total de
                  {{preu}}€
                  <button type="submit" class="btn btn-danger">Cancelar</button>
                </li>
              </form>
            {{/each}}
          </ul>

        {{else}}
          <p>No has comprat cap cotxe!</p>
        {{/if}}
      </div>
      <div
        class="tab-pane fade borderst2"
        id="list-messages"
        role="tabpanel"
        aria-labelledby="list-messages-list"
      ><h3 style="text-decoration: underline;">VENTES</h3>
        {{! compresUser,
        ventesUser, }}
        {{#if ventesUser}}
          <ul class="list-group">
            {{#each ventesUser}}
              <form
                class="form-horizontal"
                action="/cancel-compraventa?key={{idcotxe}}"
                method="post"
              >
                <li class="list-group-item flexed">
                  {{marca}}
                  {{model}}
                  venut a
                  {{comprador}}
                  per un total de
                  {{preu}}€
                  <button type="submit" class="btn btn-danger">Cancelar</button>
                </li>
              </form>
            {{/each}}
          </ul>
        {{else}}
          <p>No has venut cap cotxe!</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>